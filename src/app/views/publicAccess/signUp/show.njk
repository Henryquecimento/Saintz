{% extends "layout.njk" %}

{% block head %}
    <link rel="stylesheet" href="css/publicAccess/signUp.css">
{% endblock head %}

{% block content %}
    {# SUBSCRIBE PAGE #}
    <h2>SUBSCRIPTION</h2>
    <div class="card">
        <section class="avatar" style="background: url(https://source.unsplash.com/collection/3860213/800x600) no-repeat center center"></section>

        <section class="sign_up">

            <h3>Sign Up</h3>

            <div class="item">
                <div>Name</div>
                <div>{{ client.name }}</div>
            </div>

            <div class="item">
                <div>Age</div>
                <div>{{ client.age }}</div>
            </div>

            <div class="item">
                <div>Gender</div>

                <div>
                    <span>{{ "Male" if  client.gender == "M" else "Female" }}</span></div>
            </div>

            <a href="#" class="button">Edit</a>

        </section>

    </div>

{% endblock content %}