{% extends "publicAccess/layout.njk" %}
{% block head %}
    <link rel="stylesheet" href="css/publicAccess/index.css">
    <link rel="stylesheet" href="/css/admin/index.css">
{% endblock head %}

{% block content %}
<main>

    <div class="news container">
    
    </div>

    <section class="last-added container">
        <h2>Last Added</h2>
        <div class="products-container grid">
            {% for product in products %}
                    <div class="box image">
                        <div class="highlight">
                        {% if not product.files[0] %}
                            <a href="/admin/products/{{ product.id }}">
                                <img src="http://placehold.it/500x500?text=No Photo">
                            </a>
                        {% else %}
                         <a href="/admin/products/{{ product.id }}">
                            <img 
                                src="{{ product.files[0].src }}" 
                                alt="{{ product.files[0].name }}"
                            >
                         </a>
                        {% endif %}
                    </div>
                    <div class="product-info">
                        <div>{{product.name}}</div>
                        <div>{{product.price}}</div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </section>    

</main>
{% endblock content %}