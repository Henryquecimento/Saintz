{% extends "publicAccess/layout.njk" %}

{% block head %}
    <link rel="stylesheet" href="css/publicAccess/home_page.css">

{% endblock head %}

{% block content %}
    {# MAIN ELEMENT #}

    <main>
        {# HOME #}
        <section class="home">
            <div class="home_container grid">
                <div class="home_img"></div>
                <div class="home_data">
                    <div class="home_title">NEW<br>
                        <span>ARRIVALS</span></div>
                    <a href="#products" class="button">GO SHOPPING</a>
                </div>
            </div>
        </section>

        {# MOST VIEWED PRODUCTS #}

        <section class="featured section" id='featured'>
            <h2 class='section-title'>POPULAR PRODUCTS</h1>
            <a href="#products" class="section-subtitle">View All</a>

            {# {%for product of products %} -- You need to create a variable#}
            <div class="featured_container grid">
                <div class="featured_product">
                    <div class="products_box">
                        <div class="featured_new">NEW</div>
                        <img src="/assets/bag1.jpg" alt="Bagpack" class='product_img'>
                    </div>

                    <div class="featured_data">
                        <h3 class="featured_name">Prod1</h3>
                        <span class="featured_price">$85.00</span>
                    </div>
                </div>

            </div>

        </section>

        {# NEW ARRIVALS #}
        <section class="new section" id='new'>
            <h2 class="section-title">NEW ARRIVALS</h2>
            <a href="#products" class="section-subtitle">View All</a>

            <div class="new_container grid">
                {# {%for new of news %} -- You need to create a variable#}
                <div class="new_box">
                    <img src="/assets/bag5.jpg" alt="" class='product_img'>

                    <div class="new_link">
                        <a href="#" class="button">VIEW PRODUCT</a>
                    </div>
                </div>
            </div>

        </section>

        {# SEASONS #}

        <section class="season section" id='season'>
            <h2 class="section-title">SEASONS</h2>
            <a href="#products" class="section-subtitle">View All</a>

            <div class="seasons_container grid">

                {# {%for season of seasons %} -- You need to create a variable#}
                <div class="season_box">
                    <img src="/assets/bag8.jpg" alt="" class='product_img'>

                    <div class="season_data">
                        <h3 class="season_name">Summer</h3>
                    </div>

                    <div class="season_link">
                        <a href="#" class="button">VIEW SEASON</a>
                    </div>
                </div>
            </div>

        </section>

        {# NEWSLETTER #}

    </main>

{% endblock content %}