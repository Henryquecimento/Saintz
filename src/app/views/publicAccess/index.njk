{% extends "publicAccess/layout.njk" %}

{% block head %}
    <title>SAINTZ | HOME</title>
{% endblock head %}

{% block content %}
<main>

    <div class="news container">
    
    </div>

    <section class="last-added container">
        <h2>Last Added</h2>
        <div class="products-container grid">
            {% for product in products %}
                    <div class="box image">
                        <div class="highlight">
                        {% if not product.files[0] %}
                            <a href="/admin/products/{{ product.id }}">
                                <img src="http://placehold.it/500x500?text=No Photo">
                            </a>
                        {% else %}
                         <a href="/admin/products/{{ product.id }}">
                            <img 
                                src="{{ product.files[0].src }}" 
                                alt="{{ product.files[0].name }}"
                            >
                         </a>
                        {% endif %}
                    </div>
                    <div class="product-info">
                        <a href="/admin/products/{{ product.id }}">
                            <div class='name'>{{product.name}}</div>
                        </a>  
                        {% if product.old_price and product.old_price != product.price%}
                            <div class='oldPrice'>{{product.old_price}}</div>
                        {% endif %}
                        <div class='price'>{{product.price}}</div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </section>    

</main>
{% endblock content %}