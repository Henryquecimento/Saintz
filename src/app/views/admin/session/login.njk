{% extends "admin/layout.njk" %}

{% block header %}
<title>Start Session</title>
{% endblock header %}

{% block headerPage %}
    {% include "parts/header-session.njk"%}
{% endblock headerPage %}

{% block contents %}

    <section class="session container form">
        <form method="POST" action="/users/login">

            <div class="fields">
                {% include "admin/session/fields.njk" %}
            </div>

            <div class="buttons">
              <button class="button" type="submit">Sign-in</button>
              <a href="/users/forgot-password">
              Forgot your password?
              </a>
            </div>
        </form>

    </section>

{% endblock contents %}