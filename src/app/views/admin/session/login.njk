{% extends "admin/layout.njk" %}

{% block header %}
<title>Start Session</title>
{% endblock header %}

{% block headerPage %}
    {% include "parts/header-session.njk"%}
{% endblock headerPage %}

{% block contents %}

    <section class="session container form">
        <form method="POST" action="/users/login">
            <h3>Access your account</h3>
            
            <div class="fields">
                {% include "admin/session/fields.njk" %}
            </div>

            <div class="buttons">
              <a class='forgot-password' href="/users/forgot-password">
              Forgot your password?
              </a>
              <button class="button" type="submit">Sign-in</button>
            </div>
        </form>

    </section>

{% endblock contents %}