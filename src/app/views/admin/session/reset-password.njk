{% extends "admin/layout.njk" %}

{% block header %}
<title>Start Session</title>
{% endblock header %}

{% block headerPage %}
    {% include "parts/header-session.njk"%}
{% endblock headerPage %}

{% block contents %}

    <section class="session container form">
        <form method="POST" action="/users/reset-password">

            <h3>Password Recovery</h3>
          
            <div class="fields">
                <div class="item">
                    <div>Email</div>
                    <div>
                        <input 
                            type="email" 
                            name="email"
                            value='{{ user.email }}'
                            placeholder='Insert your email to recover you password'>
                    </div>
                </div>

                <div class="item">
                    <div>New Password</div>
                    <div>
                        <input 
                            type="password" 
                            name="password"
                            placeholder='Insert a strong password'
                        >
                    </div>
                </div>

                <div class="item">
                    <div>Repeat Password</div>
                    <div>
                        <input 
                            type="password" 
                            name="passwordRepeat"
                            placeholder='Confirm your new password'
                        >
                    </div>
                </div>
            </div>

            <div class="buttons">
              <button class="button" type="submit">Reset</button>
            </div>
        </form>

    </section>

{% endblock contents %}