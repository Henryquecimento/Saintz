{% extends "admin/layout.njk" %}

{% block header %}
    <link rel="stylesheet" href="/css/admin/create.css">
{% endblock header %}

{% block contents %}

    <section class="container form">
        <form method="POST" action="/admin/categories?_method=PUT" enctype='multipart/form-data'>
            <div class="header">Edit categories</div>

            <div class="fields">
                {% include "admin/categories/fields.njk" %}
                <input type="hidden" name="id" value='{{ category.id }}'>
            </div>
            <button class="button edit" type="submit">Update</button>
        </form>

        <form id="form-delete" method="POST" action="/admin/categories?_method=DELETE">
            <input type="hidden" name="id" value='{{ category.id }}'>
            <button class="button delete" type="submit">Delete</button>
        </form>

    </section>
    {% include "admin/confirm.njk" %}

{% endblock contents %}