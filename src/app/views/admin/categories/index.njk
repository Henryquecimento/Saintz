{% extends 'admin/layout.njk' %}

{% block header %}
    <title>SAINTZ - Categories</title>
{% endblock header %}

{% block contents %}
    <section class="container">
        <div class="header">
            <div>Category Manager</div>
            <div class='create'>
                <a href="/admin/categories/create">Add Category</a>
            </div>
        </div>

        <div class="category-container">
            {% for category in categories %}
                <div class="box">
                    <div>{{category.name}}</div>
                    <div>
                        <a href="/admin/categories/{{category.id}}/edit">Edit</a>
                    </div>
                    <div>
                        <a href="/admin/categories/{{category.id}}">Visualize</a>
                    </div>
                </div>
            {% endfor %}
        </div>

    </section>

{% endblock contents %}