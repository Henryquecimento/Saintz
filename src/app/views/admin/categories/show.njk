{% extends 'admin/layout.njk' %}

{% block header %}
    <link rel="stylesheet" href="/css/admin/index.css">
{% endblock header %}

{% block contents %}
    <section class="container">
        <div class="header">
            <div>Products Per Category</div>
            <div class='create'>
                <a href="/admin/products/create">Add Product</a>
            </div>
        </div>

        <div class="body card">
            {% for products in category.total_products %}
                <div class="box">
                    <div>{{products}}</div>
                    <div>
                        <a href="/admin/products">Visualize</a>
                    </div>
                </div>
            {% endfor %}
        </div>

    </section>

{% endblock contents %}